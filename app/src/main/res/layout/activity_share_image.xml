<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShareImageActivity">

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="takepic"/>
    <Button
        android:id="@+id/btn_shareprivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share from Private memory"
        android:layout_below="@id/btn_camera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="shareprivate"/>
    <Button
        android:id="@+id/btn_shareinternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share from internal file"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_shareprivate"
        android:layout_marginTop="50dp"
        android:onClick="shareinternal"/>





</RelativeLayout>